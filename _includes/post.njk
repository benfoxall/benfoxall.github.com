---
layout: default.njk
---

<h1 class="post-title">
	<a href="/" class="home">&larr;</a>

	<a href="{{ page.url }}">
		{{ title }}
	</a>

	<time class="date" datetime="{{ page.date | date_to_xmlschema }}">
		{{ page.date | date("DD MMMM YYYY") }}
	</time>
</h1>

{% if draft %}
	<p class="notice">⚠️ Draft post, please give feedback! ⚠️</h1>
{% endif %}

<div {% if cr %}class="cr" data-cr="{{ cr }}" data-cr-defer="" {% endif %}>
	{% if published == "draft" %}
	<p class="alert alert-warning">this is a draft post - there are probably errors and the url may change</p>
	{% endif %}

	<div class="main">
		{{ content | safe }}
	</div>
</div>
